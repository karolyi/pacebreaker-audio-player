{
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "rules": {
    "no-console": [1],
    "semi": [2, "never"],
    "quotes": [2, "single"],
    "strict": [2, "never"],
    "max-len": [2, {"code": 80, "tabWidth": 4, "ignoreUrls": true}]
  },
  "plugins": [
    "react"
  ],
  "extends": ["eslint:recommended", "plugin:react/recommended"]
}
